{
  "name": "infernode",
  "version": "0.0.0",
  "description": "flamegraph tool for node.js",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "clean": "rm -rf ./dist",
    "copy-assets": "cp -R ./src/assets ./dist/",
    "build": "tsc && npm run copy-assets",
    "test": "jest",
    "dev": "mkdir -p ./dist && touch ./dist/index.js && tsc && concurrently \"npx tsc --watch\" \"nodemon dist/index.js\""
  },
  "jest": {
    "globalSetup": "./jest-setup.js",
    "globalTeardown": "./jest-teardown.js",
    "reporters": [
      "default",
      "github-actions"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "./src/assets",
      "./dist/**/*.js"
    ],
    "ignore": [
      "./src/__tests__",
      "**/**.test.[jt]s[x]",
      "**/**.spec.[jt]s[x]",
      "./dist/bundle.js",
      "./dist/assets",
      "./dist/public"
    ],
    "events": {
      "restart": "npm run copy-assets"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/infernode.git"
  },
  "keywords": [
    "flamegraph",
    "perf",
    "node.js"
  ],
  "author": "infernode dev team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oslabs-beta/infernode/issues"
  },
  "homepage": "https://github.com/oslabs-beta/infernode#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.2",
    "@types/supertest": "^2.0.12",
    "concurrently": "^7.3.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  }
}
